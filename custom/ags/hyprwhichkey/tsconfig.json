{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"noEmit": true,
		"experimentalDecorators": true,
		"strict": true,
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"jsxImportSource": "astal/gtk3",
		"skipLibCheck": true,
		"skipDefaultLibCheck": false
	},
	"include": ["src/", "env.d.ts"]
}
